<div class="table-responsive">
    <table class="table submissionsTable">
        <thead>
        <tr>
            <th scope="col">No.</th>
            <th scope="col">WAD</th>
            <th scope="col">Level</th>
            <% if(includeDownload){ %>
                <th scope="col">Download</th>
            <% } %>
        </tr>
        </thead>
        <tbody>
        <% for(let i = 0 ; i < submissions.length; i++){
            const chosenSubmission = submissions[i];
        %>
        <tr>
            <td><%- i + 1; -%></td>
            <td title="<%- chosenSubmission.wadName; -%>"><%- chosenSubmission.wadName; -%></td>
            <td><%- chosenSubmission.wadLevel; -%></td>
            <% if(includeDownload){ %>
                <% if(chosenSubmission.getDownloadUrl() !== null){ %>
                    <td>
                        <a type="button" class="btn btn-outline-primary" href="<%- chosenSubmission.getDownloadUrl(); -%>">Download</a>
                    </td>
                <% } else { %>
                    <td>N/A</td>
                <% } %>
        </tr>
        <% } %>
        <% } %>
        </tbody>
    </table>
</div>

